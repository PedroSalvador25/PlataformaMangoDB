<%= turbo_frame_tag "modal" do %>
<div data-controller="modal">
    <div data-action="click->modal#close" class="modal">
        <div data-action="click->modal#dontclose" class="modal__content">
            <%= image_tag "icons/close.svg", alt: 'icon', class: "btn-close", data: { action: "click->modal#close" } %>
            <div class="modal__header">
            <% if modal_title.present? %>
              <h1><%= modal_title %></h1>
            <% end %>
            </div>
            <div class="modal__body">
            <%= local_assigns[:content] if local_assigns[:content].present? %>
            <%= yield if block_given? %>
            </div>
        </div>
    </div>
</div>
<% end %>