<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<div class="flex justify-between items-center mb-4">
  <h1>Users</h1>
  <%= button_to "Cerrar Sesión", logout_path, method: :post, class: "bg-red-500 text-white py-2 px-4 rounded" %>
</div>

<div class="text-red-500 text-xl">
  TailwindCSS está funcionando correctamente 🎉
</div>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user, class: "btn-secondary" %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path, class: "btn-primary" %>
