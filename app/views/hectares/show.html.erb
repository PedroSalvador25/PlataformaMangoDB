<div class="container__show">

    <div class="card_show">
        <div class="header__show">
            <h1>Infomación de hectarea</h1>
        </div>

        <div class="info__show">
            <div>
                <p>ID de la Hectare:</p>
                <span> <%= @hectare.id %> </span>
            </div>
            <div>
                <p>Comunidad:</p>
                <span> <%= @hectare.community %> </span>
            </div>
            <div>
                <p>Cantidad de Plantas:</p>
                <span><%= @hectare.plants.count %></span>
            </div>
            <div>
                <p>Latitud:</p>
                <span> <%= @hectare.latitude %> </span>
            </div>
            <div>
                <p>Longitud:</p>
                <span> <%= @hectare.longitude %> </span>
            </div>
            <div>
                <p>Estatus</p>
                <span> <%= @hectare.isReady ? "Listo para cosecha" : "No cumple con los parametros" %> </span>
            </div>
            <div>
                <p>Autorizado:</p>
                <span> <%= @hectare.isAuthorized ? "Autorizado" : "SIn autorización" %> </span>
            </div>
        </div>
        <div class="options__show">
            <div class="button">
                <%= link_to "Regresar", hectares_path, class: "btn-back" %>
            </div>
            <% if user_has_role?(current_user, :Tagger) %>
            <div class="button">
                <%= link_to "Agregar caja", new_box_path(hectare_id: @hectare.id), class: "btn-primary"%>
            </div>
            <% end %>

        </div>
    </div>

</div>