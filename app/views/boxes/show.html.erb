<div class="container__show">
  <div class="card_show">

    <div class="header__show">
      <h1>Informaci√≥n de la Caja</h1>
    </div>

    <div class="info__show">
      <div>
        <p>ID de la Caja:</p>
        <span><%= @box.id %></span>
      </div>
      <div>
        <p>Calidad:</p>
        <span><%= @box.quality %></span>
      </div>
      <div>
        <p>Peso:</p>
        <span><%= @box.weigth %></span>
      </div>      
      <div>
        <p>Planta:</p>
        <span><%= @box.plant_id %></span>
      </div>
      <div>
        <p>Hectarea:</p>
        <span><%= @box.plant.hectare_id %></span>
      </div>
    </div>

    <div class="options__show">
      <div class="button">
        <%= link_to "Regresar", boxes_path, class: "btn-back" %>
      </div>
      <div class="button">
        <%= link_to "Editar", edit_box_path(@box), class: "btn-primary" %>
      </div>
      <div class="button">
        <%= button_to "Eliminar", @box, method: :delete, class: "btn-destroy" %>
      </div>
    </div>
  </div>
</div>